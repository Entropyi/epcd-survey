@page
@model LoginModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    string title = "Log in";

    if (Thread.CurrentThread.CurrentCulture.Name == "ar")
    {
        title = "تسجيل الدخول";
    }

    ViewData["Title"] = title;
}

<form id="account" method="post" class="landing-root-container">

    <div class="landing-sub-container" id="landing-background">
        <div class="top-container">
            @await Html.PartialAsync("HeaderR")

        </div>

        <div class="body-container">
            <div class="landing-title-container" style="justify-content: center; margin-top: 3em">
                <div style="color: white" class="form__super-title-container">
                    <h1 class="form__super-title-text">@Localizer["loginTitle"]</h1>
                </div>
            </div>

            <div
                asp-validation-summary="ModelOnly"
                style="text-align: center"
                class="error-message">

            </div>

            <div class="login__section-container">

                <div class="login-group">
                    <div class="email-container">
                        <label asp-for="Input.Email" class="login-label">@Localizer["email"]</label>
                        <input asp-for="Input.Email" class="form__input__small" autocomplete="username" aria-required="true" placeholder="@Localizer["email"]"/>
                        <span asp-validation-for="Input.Email" class="error-message-login"></span>
                        <div class="spacing"></div>
                    </div>

                    <div class="password-container">
                        <label asp-for="Input.Password" class="login-label">@Localizer["password"]</label>
                        <input asp-for="Input.Password" class="form__input__small" autocomplete="current-password" aria-required="true" placeholder="@Localizer["password"]"/>
                        <span asp-validation-for="Input.Password" class="error-message-login"></span>
                        <div class="spacing"></div>

                    </div>


                    <img class="captcha-image" id="img-captcha" src="~/captcha-image"/>

                    <div class="password-container">

                        <input type="text"
                               asp-for="Input.CaptchaCode"
                               class="form__input__small"
                               placeholder="@Localizer["captcha"]"
                               autocomplete="off"
                               minlength="4"
                               maxlength="4"/>

                        <div class="spacing"></div>
                        <span asp-validation-for="Input.CaptchaCode" class="error-message-login"></span>

                    </div>

                    <div style="margin-top: 1em;">
                        <button id="login-submit" type="submit" class="login-submit">@Localizer["loginText"]</button>
                    </div>
                    <p>
                        <a class="rest-text" id="forgot-password" asp-page="./ForgotPassword">@Localizer["forgotPassword"]</a>
                    </p>

                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}