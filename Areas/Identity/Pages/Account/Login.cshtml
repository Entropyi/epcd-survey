@page
@model LoginModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Log in";
}

<form id="account" method="post" class="landing-root-container">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="landing-sub-container" id="landing-background">
        <div class="top-container">
            @await Html.PartialAsync("HeaderR")

        </div>

        <div class="body-container">
            <div class="landing-title-container" style="justify-content: center; margin-top: 3em">
                <div style="color: white" class="form__super-title-container">
                    <h1 class="form__super-title-text">@Localizer["loginTitle"]</h1>
                </div>
            </div>

            <div class="login__section-container">
                <div class="login-group">
                    <div class="email-container">
                        <label asp-for="Input.Email" class="login-label">Email</label>
                        <input asp-for="Input.Email" class="form__input__small" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="password-container">
                        <label asp-for="Input.Password" class="login-label">Password</label>
                        <input asp-for="Input.Password" class="form__input__small" autocomplete="current-password" aria-required="true" placeholder="password"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <img id="img-captcha" src="~/captcha-image"/>
                    <input type="text"
                           asp-for="Input.CaptchaCode"
                           class="form__input__small"
                           placeholder="Captcha Code"
                           autocomplete="off"
                           minlength="4"
                           maxlength="4" />
                    <div>
                        <button  id="login-submit" type="submit" class="login-submit">Log in</button>
                    </div>
                    <p>
                        <a class="rest-text" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>

                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}